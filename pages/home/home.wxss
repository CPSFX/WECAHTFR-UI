
@import "../../templates/templates.wxss";
.nav{
    width: 100%;
    height: 64rpx;
    font-size: 32rpx;
    padding: 0rpx;
    margin-top: 0rpx;
    border-bottom: 2rpx solid gray;
    position:relative;
}
.cu-item{
    min-height: 60rpx;
    margin-top: 0rpx;
}
.hometext{
    
    height: 100rpx;
}
.homepage{
    
    margin-top: 80rpx;
}

/* 各个界面之间的切换 */
.RecommendPage,.RainbowSixPage,.PUBGPage,.PcGamePage{
    margin-top: 0rpx;
}
.AddPage{
    background-color: blue;
    width: 100%;
    height: 200rpx;
}
/* 房间设置 */
.Room{
    width: 100%;
    height: 120rpx;
    display: flex;
    justify-content: space-evenly;
    margin-top: 20rpx;
    border-bottom: 2rpx grey solid;
}
.FindRoom,.CreateRoom{  
    width: 240rpx;
    height: 100rpx; 
    display: block;
}
/* 游戏的log样式 */
.pubgLog,.lolLog,.dota2Log,.cai6Log,.GTA5Log,.CSGOLog,.ApexLog,.WarframLog,.OverwatchLog{
  width: 150rpx;
  height: 100rpx;

}
/*游戏显示所占各区域*/
.PUBG,.LOL,.DOTA2,.cai6,.GTA5,.CSGO,.Apex,.Warfram,.Overwatch{
  width: 100rpx;
  height: 122rpx;
  font-size: 24rpx;
  margin-left: 36rpx;
}
/* 游戏名称 */
.pubgText,.lolText,.dota2Text,.Text,cai6Text,.GTA5Text,.CSGOText,.ApexText,.WarframText,.OverwatchText{
  position: absolute;
  margin-left: 15rpx;
}
/* 设置板块排布样式，自动换行 */
.allRecommend{
  display: flex;
  flex-wrap: wrap;
}